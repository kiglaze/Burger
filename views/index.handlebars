<header>
  <h1>Eat Da Burger</h1>
  <img src="https://cdn.therockpoolfiles.com/therockpoolfiles/wp-content/uploads/sites/5/2017/01/27000248/bp-testing-2-1200x1080.jpg">
</header>
<div class="main-content">
  <section class="burgers-list uneaten">
    <ul>
      {{#each uneatenBurgers }}
        <li data-burger-id="{{this.id}}">
        <p>{{this.burger_name}}</p>
        <button class="devour-button" data-burger-id="{{this.id}}">Devour it!</button>
        </li>
      {{/each}}
    </ul>
  </section>

  <section class="data-entry-section">
    <p>Enter the name of the burger you would like to eat.</p>

    <h2>Add a Burger</h2>

    <form class="burger-form">

      <div class="form-group">
        <label for="auth">Burger:</label>
        <input type="text" id="burger-entry" name="burger-entry">
      </div>

      <button type="submit" name="submit-burger">Submit</button>
    </form>
  </section>

  <section class="burgers-list eaten">
    <ul>
      {{#each eatenBurgers }}
        <li>
        <p>{{this.burger_name}}</p>
        </li>
      {{/each}}
    </ul>
  </section>
</div>